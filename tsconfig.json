{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node16",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist-types",
        "types": [
            "node",
            "vitest/globals"
        ],
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-types"
    ]
}